    /* モダンモーダルスタイル */
    :root {
      --primary-color: #3a86ff;
      --primary-dark: #2667cc;
      --primary-light: #6ea8ff;
      --secondary-color: #ff9f1c;
      --success-color: #38b000;
      --danger-color: #e63946;
      --warning-color: #ffb703;
      --dark-color: #1a1a2e;
      --light-color: #f8f9fa;
      --gray-100: #f8f9fa;
      --gray-200: #e9ecef;
      --gray-300: #dee2e6;
      --gray-400: #ced4da;
      --gray-500: #adb5bd;
      --gray-600: #6c757d;
      --gray-700: #495057;
      --gray-800: #343a40;
      --gray-900: #212529;
      --shadow-sm: 0 .125rem .25rem rgba(0,0,0,.075);
      --shadow: 0 .5rem 1rem rgba(0,0,0,.15);
      --shadow-lg: 0 1rem 3rem rgba(0,0,0,.175);
      --border-radius: 0.375rem;
      --border-radius-lg: 0.5rem;
      --transition: all 0.3s ease;
    }

    /* モーダル全体のスタイル */
    .modal-content {
      border: none;
      border-radius: var(--border-radius-lg);
      box-shadow: var(--shadow-lg);
      overflow: hidden;
      background-color: white;
    }

    .modal-header {
      background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
      color: white;
      border-bottom: none;
      padding: 1.5rem;
    }

    .modal-title {
      font-size: 1.5rem;
      font-weight: 600;
      letter-spacing: 0.5px;
    }

    .btn-close {
      filter: invert(1) grayscale(100%) brightness(200%);
      opacity: 0.8;
      box-shadow: none;
    }

    .modal-body {
      padding: 2rem;
    }

    /* 電話認証モーダルのスタイル */
    #phoneVerificationModal .modal-content {
      max-width: 500px;
      margin: 0 auto;
    }

    .phone-verification-icon {
      width: 85px;
      height: 85px;
      margin: 0 auto 1.5rem;
      background-color: rgba(58, 134, 255, 0.1);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .phone-verification-icon i {
      color: var(--primary-color);
      font-size: 2.5rem;
    }

    .phone-verification-title {
      font-size: 1.5rem;
      font-weight: 600;
      text-align: center;
      margin-bottom: 1rem;
      color: var(--gray-800);
    }

    .phone-verification-subtitle {
      text-align: center;
      color: var(--gray-600);
      margin-bottom: 2rem;
      line-height: 1.5;
    }

    .input-group-text {
      background-color: var(--gray-100);
      border-color: var(--gray-300);
      color: var(--gray-700);
      font-weight: 500;
    }

    #phone-number {
      font-size: 1.1rem;
      padding: 0.7rem 1rem;
    }

    #send-code-btn {
      background-color: var(--primary-color);
      border-color: var(--primary-color);
      transition: var(--transition);
    }

    #send-code-btn:hover {
      background-color: var(--primary-dark);
      border-color: var(--primary-dark);
    }

    #verification-code {
      font-size: 1.5rem;
      letter-spacing: 0.5rem;
      text-align: center;
      padding: 0.7rem 1rem;
      font-weight: 600;
    }

    .verification-info {
      text-align: center;
      color: var(--gray-600);
      font-size: 0.85rem;
      margin-top: 0.5rem;
      padding: 0.5rem;
      background-color: rgba(58, 134, 255, 0.05);
      border-radius: var(--border-radius);
    }

    .verification-button {
      background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
      border: none;
      padding: 0.9rem 1.5rem;
      font-weight: 600;
      letter-spacing: 1px;
      text-transform: uppercase;
      transition: var(--transition);
      box-shadow: var(--shadow-sm);
    }

    .verification-button:hover {
      background: linear-gradient(135deg, var(--primary-dark), var(--primary-color));
      transform: translateY(-2px);
      box-shadow: var(--shadow);
    }

    /* ID書類アップロードモーダルのスタイル */
    #idDocumentModal .modal-dialog {
      max-width: 650px;
    }

    .document-upload {
      background-color: var(--gray-100);
      border-radius: var(--border-radius);
      padding: 1.5rem;
      margin-bottom: 1.5rem;
      border: 1px solid var(--gray-300);
      transition: var(--transition);
    }

    .document-upload:hover {
      border-color: var(--primary-color);
      background-color: white;
      box-shadow: var(--shadow-sm);
    }

    .form-label {
      font-weight: 600;
      color: var(--gray-700);
      margin-bottom: 0.5rem;
    }

    .form-select {
      padding: 0.75rem 1rem;
      border-radius: var(--border-radius);
      border: 1px solid var(--gray-300);
      transition: var(--transition);
    }

    .form-select:focus {
      border-color: var(--primary-color);
      box-shadow: 0 0 0 0.2rem rgba(58, 134, 255, 0.25);
    }

    .upload-prompt {
      background-color: white;
      border: 2px dashed var(--gray-400);
      border-radius: var(--border-radius);
      padding: 1.5rem;
      text-align: center;
      cursor: pointer;
      transition: var(--transition);
    }

    .upload-prompt:hover {
      border-color: var(--primary-color);
      background-color: rgba(58, 134, 255, 0.05);
    }

    .preview-container {
      margin-top: 1rem;
      position: relative;
    }

    .preview-container img {
      width: 100%;
      border-radius: var(--border-radius);
      box-shadow: var(--shadow-sm);
    }

    .remove-file {
      border-radius: 50%;
      width: 32px;
      height: 32px;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 0;
      font-size: 1.1rem;
      position: absolute;
      top: 10px;
      right: 10px;
      background-color: rgba(230, 57, 70, 0.9);
      color: white;
      border: none;
    }

    .remove-file:hover {
      background-color: var(--danger-color);
    }

    #submit-document {
      background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
      border: none;
      padding: 0.9rem 1.5rem;
      font-weight: 600;
      letter-spacing: 1px;
      text-transform: uppercase;
      transition: var(--transition);
      box-shadow: var(--shadow-sm);
    }

    #submit-document:hover {
      background: linear-gradient(135deg, var(--primary-dark), var(--primary-color));
      transform: translateY(-2px);
      box-shadow: var(--shadow);
    }

    /* アニメーション */
    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }

    .fade-in {
      animation: fadeIn 0.3s ease-in;
    }

    @keyframes slideUp {
      from { transform: translateY(20px); opacity: 0; }
      to { transform: translateY(0); opacity: 1; }
    }

    .slide-up {
      animation: slideUp 0.4s ease-out;
    }

    /* アラートのスタイリング */
    .alert {
      border: none;
      border-radius: var(--border-radius);
      padding: 1rem;
      margin-top: 1rem;
      box-shadow: var(--shadow-sm);
    }

    .alert-success {
      background-color: rgba(56, 176, 0, 0.1);
      color: var(--success-color);
    }

    .alert-danger {
      background-color: rgba(230, 57, 70, 0.1);
      color: var(--danger-color);
    }

    /* レスポンシブ調整 */
    @media (max-width: 768px) {
      .modal-body {
        padding: 1.5rem;
      }
      
