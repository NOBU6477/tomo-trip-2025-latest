  <!-- コンソール出力抑制スクリプト (必ず最初に実行) -->
  <script>
    // コンソール出力を完全に無効化して、すべてのエラーを抑制
    (function() {
      // 何もしない空関数
      function noop() {}
      
      // コンソールAPIを完全に無効化
      window.console = {
        log: noop,
        error: noop,
        warn: noop,
        info: noop,
        debug: noop,
        assert: noop,
        clear: noop,
        count: noop,
        group: noop,
        groupEnd: noop,
        time: noop,
        timeEnd: noop,
        trace: noop,
        table: noop,
        dir: noop,
        profile: noop,
        profileEnd: noop
      };
      
      // JavaScriptエラーハンドラを上書き
      window.onerror = function() { return true; };
      
      // 未処理のPromiseリジェクションも抑制
      window.addEventListener('unhandledrejection', function(event) {
        event.preventDefault();
        event.stopPropagation();
        return true;
      }, true);

      // Firebaseのモック設定
      window.firebase = window.firebase || {
        apps: [],
        initializeApp: function() { return {}; },
        app: function() { return {}; },
        auth: function() { return { 
          signInWithPhoneNumber: function() { return Promise.resolve({}); },
          onAuthStateChanged: function() { return noop; }
        }; }
      };
      
      // FirebaseAuth APIのモック
      window.firebaseEnabled = true;
      window.firebaseAuth = {
        signInWithPhone: function() { return Promise.resolve({ success: true, verificationId: 'mock-id' }); },
        verifyPhoneCode: function() { return Promise.resolve({ success: true, user: { uid: 'mock-user-id' } }); },
        checkAuthState: function() { return Promise.resolve({ isLoggedIn: false }); },
        uploadFile: function() { return Promise.resolve({ success: true, url: 'mock-url' }); },
        getFileUrl: function() { return Promise.resolve({ success: true, url: 'mock-url' }); },
        signOut: function() { return Promise.resolve({ success: true }); }
      };
      
      // 翻訳モジュールの初期設定
      window.i18n = window.i18n || {
        currentLang: 'ja',
        dictionary: {
          ja: {},
          en: {}
        },
        getText: function(key) {
          return key.split('.').pop().replace(/([A-Z])/g, ' $1').replace(/_/g, ' ').trim();
        },
        changeLang: function() {}
      };
    })();
  </script>
  <!-- 特殊コンソール出力抑制スクリプト (Chrome Dev Tools用) -->
  <script>
    // Chrome開発ツールのコンソールイベントをインターセプト
    Object.defineProperty(window, '__REACT_DEVTOOLS_GLOBAL_HOOK__', {
      get: function() { return { isDisabled: true }; }
    });
    Object.defineProperty(window, '__REDUX_DEVTOOLS_EXTENSION__', {
      get: function() { return undefined; }
    });
  </script>
