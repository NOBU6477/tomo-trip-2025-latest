  <script>
    // Featherアイコンの初期化
    document.addEventListener('DOMContentLoaded', function() {
      feather.replace();
      
      // Firebase設定を初期化（直接初期化方式）
      console.log('Firebaseの簡易設定を行います');
      
      // Firebaseモック設定（API呼び出しなし）
      const firebaseConfig = {
        apiKey: "mock-api-key-for-development",
        authDomain: "local-guide-mock.firebaseapp.com",
        projectId: "local-guide-mock",
        storageBucket: "local-guide-mock.appspot.com",
        messagingSenderId: "123456789012",
        appId: "1:123456789012:web:abcdef1234567890"
      };
      
      // Firebase直接初期化（エラー処理追加）
      try {
        if (typeof firebase !== 'undefined' && firebase.app) {
          // Firebase APIが利用可能な場合は直接初期化
          if (!firebase.apps.length) {
            firebase.initializeApp(firebaseConfig);
            console.log('Firebase SDK初期化成功');
          } else {
            console.log('Firebase SDK既に初期化済み');
          }
          window.firebaseEnabled = true;
        } else {
          // Firebase APIが利用できない場合はモック使用
          console.log('Firebase SDKが見つからないため、モックモードで実行します');
          window.firebaseEnabled = false;
        }
      } catch (error) {
        console.error('Firebase初期化エラー:', error);
        console.log('エラーのためモックモードで継続します');
        window.firebaseEnabled = false;
      }
      
      // ログイン状態の確認（存在する場合）
      if (window.firebaseAuth && typeof window.firebaseAuth.checkAuthState === 'function') {
        window.firebaseAuth.checkAuthState()
          .then(authState => {
            if (authState.isLoggedIn) {
              console.log('ユーザーはログイン中です');
            } else {
              console.log('ユーザーは未ログインです');
            }
          })
          .catch(() => console.log('認証状態確認エラー'));
      }
    });
  </script>
