{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@server/*": ["./server/*"],
      "@shared/*": ["./shared/*"],
      "@client/*": ["./client/*"]
    },
    "baseUrl": "."
  },
  "include": ["server/**/*", "shared/**/*", "client/**/*"],
  "exclude": ["node_modules"]
}
