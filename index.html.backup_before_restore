  <script>
    // Featherアイコンの初期化
    document.addEventListener('DOMContentLoaded', function() {
      feather.replace();
      
      // Firebase設定を取得
      const apiKey = document.querySelector('meta[name="firebase-api-key"]')?.content;
      const projectId = document.querySelector('meta[name="firebase-project-id"]')?.content;
      const appId = document.querySelector('meta[name="firebase-app-id"]')?.content;
      
      // Firebase初期化
      if (apiKey && projectId && appId && apiKey !== '{{FIREBASE_API_KEY}}') {
        if (typeof window.initFirebase === 'function') {
          window.initFirebase(apiKey, projectId, appId)
            .then(success => {
              if (success) {
                console.log('Firebase initialized successfully');
              } else {
                console.error('Failed to initialize Firebase');
              }
            });
        }
      } else {
        // APIからFirebase設定を取得する
        fetch('/api/firebase-config')
          .then(response => {
            if (!response.ok) {
              throw new Error('Failed to fetch Firebase config');
            }
            return response.json();
          })
          .then(config => {
            if (typeof window.initFirebase === 'function') {
              window.initFirebase(config.apiKey, config.projectId, config.appId)
                .then(success => {
                  if (success) {
                    console.log('Firebase initialized successfully');
                  } else {
                    console.error('Failed to initialize Firebase');
                  }
                });
            }
          })
          .catch(error => {
            console.error('Firebase config error:', error);
          });
      }
    });
  </script>
  <script src="unified_modal_handler.js"></script>
