# ルートの .replit（最小でOK）
run = "node github-migration-ready/server.js"

[interpreter]
language = "nodejs"

# Port:5000 の公開設定（オレンジ警告の対策）
[[ports]]
localPort = 5000
proxy = true
visibility = "public"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "TomoTripAPIServer"

[[workflows.workflow]]
name = "TomoTripAPIServer"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node simple-server.js"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[nix]
channel = "stable-25_05"
packages = ["nodejs"]
